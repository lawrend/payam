    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <%= render 'layouts/header' %>
      <div class="container">
        <div class="jumbotron">
          <%= render 'layouts/messages' %>
          <%= yield %>
        </div><!--jumbotron-->
      </div><!--container-->
    </div><!--container-fluid-->
  </body>
</html>
